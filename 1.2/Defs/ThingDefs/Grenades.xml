<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="TKYYS_BaseGrenadeProjectile" Abstract="True">
    <category>Projectile</category>
    <altitudeLayer>Projectile</altitudeLayer>
    <thingClass>Projectile_Explosive</thingClass>
    <label>projectile</label>
    <tickerType>Normal</tickerType>
    <useHitPoints>False</useHitPoints>
    <neverMultiSelect>True</neverMultiSelect>
    <graphicData>
      <shaderType>Transparent</shaderType>
    </graphicData>
    <projectile>
      <speed>60</speed>
      <arcHeightFactor>2</arcHeightFactor>
      <shadowSize>0.4</shadowSize>
    </projectile>
  </ThingDef>
  <ThingDef Name="TKYYS_BaseMakeableGrenade" ParentName="TKYYS_BaseWeapon" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>TKYYS_TraceBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>
  <!--一柱擎天炸弹-->
  <ThingDef ParentName="TKYYS_BaseMakeableGrenade">
    <defName>TKYYS_YZQTBomb_Grenade</defName>
    <label>一柱擎天炸弹</label>
    <description>超高校级的黄段子手制作的EMP手雷，有效直径50米，超长效瘫痪各种电子设备。如果您还在为熊仔偷拍感到烦恼，现在，不要5800！不要3800！只要880！对，您没听错，只要880！一柱擎天炸弹带回家！数量有限，机不可失，失不再来！立即拨打屏幕下方的热线电话，抢购吧！
真实黑幕：“不愧是兔司机，轻易地给武器取了我们取不出的名字！”</description>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>WeaponGrenade/TKYYS_YZQTBomb</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.3</uiIconScale>
    <soundInteract>Interact_Grenade</soundInteract>
    <techLevel>Industrial</techLevel>
    <statBases>
      <Mass>0.1</Mass>
      <RangedWeapon_Cooldown>0</RangedWeapon_Cooldown>
      <WorkToMake>1000</WorkToMake>
    </statBases>
    <costList>
      <Steel>30</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
      <Gold>88</Gold>
      <Silver>33</Silver>
    </costList>
    <recipeMaker></recipeMaker>
    <weaponTags></weaponTags>
    <thingCategories>
      <li>Grenades</li>
    </thingCategories>
    <verbs>
      <li>
        <label>扔出一柱擎天炸弹</label>
        <verbClass>Verb_ShootOneUse</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <range>50</range>
        <forcedMissRadius>1.9</forcedMissRadius>
        <warmupTime>1</warmupTime>
        <noiseRadius>4</noiseRadius>
        <ai_IsBuildingDestroyer>false</ai_IsBuildingDestroyer>
        <soundCast>ThrowGrenade</soundCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <defaultProjectile>TKYYS_YZQTBomb_Projectile</defaultProjectile>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
        <onlyManualCast>true</onlyManualCast>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>25</explosiveRadius>
        <explosiveDamageType>EMP</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
    </comps>
    <smeltProducts>
      <Steel>10</Steel>
    </smeltProducts>
  </ThingDef>
  <ThingDef ParentName="BaseGrenadeProjectile">
    <defName>TKYYS_YZQTBomb_Projectile</defName>
    <label>一柱擎天炸弹</label>
    <thingClass>Projectile_Explosive</thingClass>
    <graphicData>
      <texPath>WeaponGrenade/TKYYS_YZQTBomb</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <explosionRadius>25</explosionRadius>
      <damageDef>EMP</damageDef>
      <damageAmountBase>999</damageAmountBase>
      <explosionDelay>100</explosionDelay>
    </projectile>
  </ThingDef>
  <!--小羊杖-->
  <ThingDef ParentName="TKYYS_BaseMakeableGrenade">
    <defName>TKYYS_EyjafjallaWand_Wand</defName>
    <label>艾雅法拉长杖</label>
    <description>“前辈~”
啊，还是种田适合老夫——某理智归零的刀客塔</description>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>WeaponGrenade/TKYYS_EyjafjallaWand_Wand</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <soundInteract>Interact_Grenade</soundInteract>
    <statBases>
      <Mass>0.1</Mass>
      <RangedWeapon_Cooldown>0</RangedWeapon_Cooldown>
      <WorkToMake>1000</WorkToMake>
    </statBases>
    <costList>
      <Steel>30</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
      <Gold>88</Gold>
      <Silver>33</Silver>
    </costList>
    <recipeMaker></recipeMaker>
    <weaponTags></weaponTags>
    <thingCategories>
      <li>Grenades</li>
    </thingCategories>
    <verbs>
      <li>
        <label>咏唱魔法</label>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <range>50</range>
        <forcedMissRadius>7</forcedMissRadius>
        <warmupTime>2</warmupTime>
        <noiseRadius>1</noiseRadius>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <soundCast>TKYYS_Attack_EyjafjallaWand</soundCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <defaultProjectile>TKYYS_EyjafjallaWand_FireBall</defaultProjectile>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
        <onlyManualCast>true</onlyManualCast>
        <burstShotCount>60</burstShotCount>
        <ticksBetweenBurstShots>1</ticksBetweenBurstShots>
        <requireLineOfSight>false</requireLineOfSight>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>9</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
    </comps>
    <smeltProducts>
      <Steel>10</Steel>
    </smeltProducts>
    <techLevel>Industrial</techLevel>
  </ThingDef>
  <ThingDef ParentName="BaseGrenadeProjectile">
    <defName>TKYYS_EyjafjallaWand_FireBall</defName>
    <label>火山喷发流石</label>
    <thingClass>Projectile_Explosive</thingClass>
    <graphicData>
      <texPath>WeaponGrenade/TKYYS_EyjafjallaWand_FireBall</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <explosionRadius>3</explosionRadius>
      <damageDef>Flame</damageDef>
      <damageAmountBase>70</damageAmountBase>
      <explosionDelay>1</explosionDelay>
      <preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
      <ai_IsIncendiary>true</ai_IsIncendiary>
      <speed>35</speed>
      <flyOverhead>true</flyOverhead>
      <arcHeightFactor>7</arcHeightFactor>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>
</Defs>