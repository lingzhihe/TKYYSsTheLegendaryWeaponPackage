          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>严重</label>
        <minSeverity>0.35</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.6</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.6</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>沉寂</label>
        <minSeverity>0.62</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.9</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.9</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <!--阿莫斯之弓冰块-->
  <HediffDef ParentName="InjuryBase">
    <defName>TKYYS_IceBlock</defName>
    <label>冰块</label>
    <description>寒冷渗入了骨髓之中</description>
    <displayWound>false</displayWound>
    <defaultLabelColor>(185,205,246)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
